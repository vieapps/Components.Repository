<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>net.vieapps.Components.Repository</RootNamespace>
		<WarningLevel>3</WarningLevel>
		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\VIEApps.Components.Repository.xml</DocumentationFile>
		<AssemblyName>VIEApps.Components.Repository</AssemblyName>
		<AssemblyTitle>VIEApps NGX Repository</AssemblyTitle>
		<SignAssembly>false</SignAssembly>
		<AssemblyOriginatorKeyFile>../VIEApps.Components.snk</AssemblyOriginatorKeyFile>
		<AssemblyVersion>10.3.1906.3</AssemblyVersion>
		<FileVersion>10.3.1906.3</FileVersion>
		<InformationalVersion>v10.3.netstandard-2.x+rev:2019.06.18-multiple.targets.preview</InformationalVersion>
		<Product>VIEApps NGX</Product>
		<Company>VIEApps.net</Company>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>VIEApps.Components.Repository</PackageId>
		<Version>10.3.1906.3-preview</Version>
		<Title>VIEApps NGX Repository</Title>
		<Description>A polyglot library to help POCO objects work with both NoSQL and SQL databases at the same time on .NET Standard 2.x</Description>
		<Authors>VIEApps.net</Authors>
		<Copyright>© 2019 VIEApps.net</Copyright>
		<PackageLicense>LICENSE.md</PackageLicense>
		<PackageOutputPath>..\</PackageOutputPath>
		<PackageTags>polyglot;repository;orm;activerecord;database;sql;nosql;vieapps;vieapps.components</PackageTags>
		<PackageReleaseNotes>Experimental with preview packages</PackageReleaseNotes>
		<PackageProjectUrl>https://vieapps.net/</PackageProjectUrl>
		<PackageIconUrl>https://github.com/vieapps/Components.Utility/raw/master/logo.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/vieapps/Components.Repository</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".DS_Store" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="LICENSE.md" />
		<None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="MongoDB.Driver" Version="2.9.0-beta2" />
		<PackageReference Include="VIEApps.Components.Caching" Version="10.3.1906.3-preview" />
		<PackageReference Include="VIEApps.Components.Security" Version="10.3.1906.3-preview" />
		<PackageReference Include="VIEApps.Components.Utility" Version="10.3.1906.3-preview" />
	</ItemGroup>

</Project>
